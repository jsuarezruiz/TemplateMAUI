<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TemplateMAUI.CodeEditor.Themes.CodeEditor"
    xmlns:codeEditor="clr-namespace:TemplateMAUI.CodeEditor">

    <Style TargetType="codeEditor:CodeEditor">
        <Setter Property="ControlTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <Grid
                        x:Name="PART_Container"
                        BackgroundColor="{TemplateBinding BackgroundColor}">
                        <WebView
                            x:Name="PART_Monaco" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>