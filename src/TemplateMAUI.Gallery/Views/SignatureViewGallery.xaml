<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="http://schemas.microsoft.com/dotnet/2021/maui/templatemaui"
    x:Class="TemplateMAUI.Gallery.Views.SignatureViewGallery"
    Title="SignatureView Gallery">
    <VerticalStackLayout
        Padding="12">
        <Grid
            ColumnDefinitions="*, *"
            RowDefinitions="*, Auto"
            WidthRequest="300">
            <controls:SignatureView
                x:Name="SignatureView"
                Grid.ColumnSpan="2"
                BorderBrush="Black"
                BorderThickness="2"
                StrokeColor="Black"
                StrokeThickness="6"
                HeightRequest="200"
                WidthRequest="300"/>
            <Button
                Grid.Column="0"
                Grid.Row="1"
                Text="Save"
                Clicked="OnSaveButtonClicked"/>
            <Button 
                Grid.Column="1"
                Grid.Row="1"
                Text="Clear"
                Clicked="OnClearButtonClicked"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>