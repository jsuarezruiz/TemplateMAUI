<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TemplateMAUI.Gallery.Views.SnackBarGallery"
    xmlns:controls="clr-namespace:TemplateMAUI.Controls;assembly=TemplateMAUI"
    Title="SnackBar Gallery">
    <ContentPage.Content>
        <Grid>
            <StackLayout
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Button
                    Text="Show SnackBar"
                    Clicked="OnShowDefaultSnackBarClicked"/>
                <Button
                    Text="Custom Colors"
                    Clicked="OnShowCustomColorsSnackBarClicked"/>
                <Button
                    Text="Corner Radius"
                    Clicked="OnShowCornerRadiusSnackBarClicked"/>
            </StackLayout>
            <controls:SnackBar
                x:Name="DefaultSnackBar"
                Message="Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
            <controls:SnackBar
                x:Name="CustomColorsSnackBar"
                BackgroundColor="LightSeaGreen"
                TextColor="White"
                ActionTextColor="White"
                Message="Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
            <controls:SnackBar
                x:Name="CornerRadiusSnackBar"
                BackgroundColor="OrangeRed"
                ActionTextColor="LightGoldenrodYellow"
                CornerRadius="12"
                Message="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                Margin="12, 0, 12, 24"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
