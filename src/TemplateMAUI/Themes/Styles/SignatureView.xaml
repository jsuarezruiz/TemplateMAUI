<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TemplateMAUI.Themes.SignatureView"
    xmlns:controls="clr-namespace:TemplateMAUI.Controls">

    <ControlTemplate x:Key="SignatureViewControlTemplate">
        <Border 
            x:Name="PART_Container" 
            Background="{TemplateBinding Background}"
            StrokeShape="RoundRectangle"
            Stroke="{TemplateBinding BorderBrush}"
            StrokeThickness="{TemplateBinding BorderThickness}">
            <GraphicsView
                x:Name="PART_Graphics"/>
        </Border>
    </ControlTemplate>

    <Style TargetType="controls:SignatureView">
        <Setter Property="MinimumHeightRequest" Value="48" />
        <Setter Property="MinimumWidthRequest" Value="48" />
        <Setter Property="ControlTemplate" Value="{StaticResource SignatureViewControlTemplate}"/>
    </Style>
    
</ResourceDictionary>